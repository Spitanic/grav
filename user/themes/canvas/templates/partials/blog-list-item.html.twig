<div class="entry clearfix">
    <div class="entry-image">
        {% set image = page.media.images|first %}
        {% if image %}
        <a href="{{ page.url }}">{{ image.cropZoom(800,600).html|raw }}</a>
        {% else %}
        <a href="https://via.placehold.it/1280x800" data-lightbox="image"><img class="image_fade"
                src="https://via.placehold.it/800x600" alt="{{ page.title }}"></a>
        {% endif %}
    </div>
    <div class="entry-c">
        <div class="entry-title">
            <h2><a href="{{ page.url }}">{{ page.title }}</a></h2>
        </div>
        <ul class="entry-meta clearfix">
            <li><i class="icon-calendar3"></i>{% include 'partials/_date.html.twig' with {post: post}%}</li>
        </ul>
        <div class="entry-content">
            {% if page.summary != page.content %}
            {{ page.summary|raw }}
            {% else %}
            {{ page.content|raw }}
            {% endif %}
            <a href="{{ page.url }}" class="button button-border button-rounded button-small noleftmargin">Leggi tutto</a>
        </div>
    </div>
</div>
