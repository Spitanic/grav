{% set h = page.header %}
{% set elem = h.conf %}
<section id="content">
<div class="row clearfix align-items-stretch  ">

    <div class="col-lg-6 center col-padding" style="background: url('{{elem['left_image']|first['path']}}') center center no-repeat; background-size: cover;">
    </div>

    <div class="col-lg-6 center col-padding" style="background-color: #F5F5F5;">
        <div class="heading-block nobottomborder">
            <span class="before-heading color">{{elem.subtitle}}</span>
            <h3>{{elem.title}}</h3>
        </div>

        <div class="center bottommargin">
            <a href="{{elem.video_link}}" data-lightbox="iframe" style="position: relative;">
                <img src="{{elem['video_image']|first['path']}}" alt="{{elem.title}}">
                <span class="i-overlay nobg"><img src="{{ url('theme://images/video-play.png') }}" alt="Play"></span>
            </a>
        </div>
        <p class="lead nobottommargin col-padding">{{elem.desc}}</p>
    </div>

</div>
<div class="clearfix"></div>
</section>
